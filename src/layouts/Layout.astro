---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | MiTech Consult</title>
    <!-- Preload Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Syncopate:wght@400;700&family=JetBrains+Mono:wght@400;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#030303] text-gray-200 font-sans antialiased selection:bg-cyan-500/30 selection:text-cyan-200 relative">
    
    <!-- Tech-Artsy Grid Background -->
    <div class="fixed inset-0 z-[-1] pointer-events-none">
        <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
        <div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-blue-500/20 to-transparent opacity-50"></div>
        <div class="absolute top-0 right-1/3 w-px h-full bg-gradient-to-b from-transparent via-emerald-500/20 to-transparent opacity-30 delay-1000"></div>
        <div class="absolute top-[-20%] left-[20%] w-[600px] h-[600px] bg-blue-600/5 rounded-full blur-[120px] mix-blend-screen"></div>
        <div class="absolute top-[10%] right-[-10%] w-[500px] h-[500px] bg-emerald-600/5 rounded-full blur-[100px] mix-blend-screen"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 py-6 md:py-8 flex flex-col min-h-screen relative z-10"> <!-- Reduced overall page padding -->
        <!-- Tech Header -->
        <header class="mb-12 flex flex-col md:flex-row justify-between items-center gap-6 pt-2"> <!-- Reduced margin bottom and gap -->
            <div class="relative group cursor-default">
                <div class="absolute -inset-2 bg-gradient-to-r from-blue-500 to-emerald-500 rounded-lg opacity-0 group-hover:opacity-20 blur transition duration-500"></div>
                <!-- Refined Logo Branding -->
                <a href="/" class="relative flex items-baseline gap-2 group">
                    <span class="text-3xl font-display font-bold tracking-widest text-white uppercase flex items-center gap-2">
                        <span class="text-emerald-500 text-3xl leading-none">/</span>
                        MiTech
                    </span>
                    <span class="text-lg font-mono font-normal tracking-wide text-gray-500 uppercase group-hover:text-blue-400 transition-colors">
                        Consult
                    </span>
                </a>
            </div>
            
            <nav class="flex items-center gap-1 p-1 rounded-full border border-white/5 bg-white/5 backdrop-blur-xl">
                <a href="/" class="px-5 py-2 text-xs font-mono uppercase tracking-wider rounded-full hover:bg-white/10 transition-all text-gray-400 hover:text-white border border-transparent hover:border-white/5">Index</a>
                <a href="/about" class="px-5 py-2 text-xs font-mono uppercase tracking-wider rounded-full hover:bg-white/10 transition-all text-gray-400 hover:text-white border border-transparent hover:border-white/5">Bio</a>
                <a href="/projects" class="px-5 py-2 text-xs font-mono uppercase tracking-wider rounded-full hover:bg-white/10 transition-all text-gray-400 hover:text-white border border-transparent hover:border-white/5">Works</a>
                <a href="mailto:contact@mitechconsult.com" class="px-5 py-2 text-xs font-mono uppercase tracking-wider rounded-full bg-white/10 text-white hover:bg-white/20 transition-all border border-white/10 ml-2">Connect</a>
            </nav>
        </header>
        
        <main class="flex-grow">
            <slot />
        </main>
        
        <footer class="mt-20 border-t border-white/5 pt-10 pb-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-6">
                <div class="flex gap-6 text-xs font-mono text-gray-500 uppercase tracking-widest">
                    <a href="#" class="hover:text-blue-400 transition-colors">GitHub</a>
                    <span class="text-gray-800">/</span>
                    <a href="#" class="hover:text-blue-400 transition-colors">LinkedIn</a>
                    <span class="text-gray-800">/</span>
                    <a href="#" class="hover:text-blue-400 transition-colors">Email</a>
                </div>
                <p class="text-gray-700 text-xs font-mono">
                    System Status: <span class="text-emerald-500">Normal</span> | Latency: <span class="text-emerald-500">12ms</span>
                </p>
            </div>
        </footer>
    </div>
  </body>
</html>